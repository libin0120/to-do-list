<%= simple_form_for(@todo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" style="position: relative">
    <%= f.input :task %>
    <%= f.input :details %>
    <%= f.input :deadline, as: :string, input_html: {class: 'date'} %>
    <%= f.input :completed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
