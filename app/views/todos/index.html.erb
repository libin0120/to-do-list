<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Task</th>
      <th>Deadline</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <%= render partial: todo , :locals => {todo: todo}%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: 'btn btn-default' %>
